<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"

                android:cropToPadding="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tree1" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"

                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="298dp"></android.support.v4.view.ViewPager>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="@string/homeText"
                android:textSize="15sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="5dp"
                android:paddingRight="16dp"
                android:paddingLeft="25dp"
                android:paddingTop="16dp">


                <ImageButton
                    android:id="@+id/home_join"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_join"
                    />

                <ImageButton
                    android:id="@+id/home_reg"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_reg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:text="Join"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="#1e88e5"
                    android:clickable="false"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:text="Register"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="#1e88e5"
                    android:clickable="false"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="5dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp">


                <ImageButton
                    android:id="@+id/home_plan"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_plan"
                    />

                <ImageButton
                    android:id="@+id/home_find"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_loc" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:text="Start an Activity"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="#1e88e5"
                    android:clickable="false"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:text="Find Ngos"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="#1e88e5"
                    android:clickable="false"/>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>